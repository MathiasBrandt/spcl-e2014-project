<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="dk.itu.group10.spclsmartphoneapp.RoleChooserActivity">

    <TextView
        android:id="@+id/txtPleaseChoose"
        android:text="@string/pleaseChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btnOfficeRole"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/txtPleaseChoose"
        android:text="@string/btnOfficeRole"
        android:layout_marginBottom="15dp"
        android:textSize="20sp"
        android:onClick="btnOfficeRoleOnClick"/>

    <Button
        android:id="@+id/btnVisitorRole"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/btnOfficeRole"
        android:text="@string/btnVisitorRole"
        android:textSize="20sp"
        android:onClick="btnVisitorRoleOnClick"/>

</RelativeLayout>
